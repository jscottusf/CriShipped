{{> style }}
{{> nav }}
<div class="posts-container">
    <div class="row">
        <div class="col-md-2">
            <button type="button" id="post-button" class="btn btn-dark" data-toggle="modal" data-target="#exampleModal">
                + Add Post
            </button>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <select class="custom-select" id="category">
                    <option selected value="">Select Location</option>
                    <option value="">Show all posts in the US</option>
                    {{#each cityList}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
    {{> messages}}
    <div class="row">
        <div class="col-lg-12">
            {{#each post}}
            <div class="post-card">
                <div class="post-card-header">
                    <div class="row">
                        <div class="col-10">
                            <div>Posted by <a href="/users/{{this.user}}" target="_blank">{{ this.user }}</a>
                                {{ prettifyDate this.createdAt }} | {{ this.city }}</div>
                            <h5>{{ this.title }}</h5>
                        </div>
                        <div class="col">
                            <div class="dropleft">
                                <i class="fas fa-ellipsis-h" id="dropdownMenuButton" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                </i>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a href="/forum/edit/{{this.id}}" class="dropdown-item">Edit</a>
                                    <a class="dropdown-item delete" id="delete" data-id="{{this.id}}">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="post-card-body">
                    <p>{{ this.body }}</p>
                    <a href="/forum/post/{{this.id}}">Discussion ({{ this.Comments.length }})</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
{{> post}}
