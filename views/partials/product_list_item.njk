<div class="product-list-item">
  <div class="product-list-item__image-wrapper">
    <img src="/images/{{product.image_url}}" class="product-list-item__image" />
  </div>
  <div>
    <p class="product-list-item__product-name">{{product.name}}</p>
  </div>
  <div>
    <p class="product-list-item__product-price">${{product.price}}</p>
  </div>
  <div>
    <form method="post" action="/api/orders">
      <input type="hidden" name="productId" value="{{product.id}}" />
      <input type="hidden" name="productName" value="{{product.name}}" />
      <input type="hidden" name="productPrice" value="{{product.price}}" />
      <input type="hidden" name="originalUrl" value="{{originalUrl}}" />
      <button type="submit" name="submit" class="product-list-item__button">Add to Order Requests</button>
    </form>
  </div>
</div>